<Window x:Class="DiscountTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="üí∞ Discount Tracker" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Add Product -->
        <Border Grid.Column="0" 
                Background="{StaticResource BackgroundCardBrush}"
                Margin="20"
                CornerRadius="20"
                Padding="25">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="üõçÔ∏è Add New Deal" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,25"/>

                    <!-- Product Name -->
                    <TextBlock Text="Product Name" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtProductName" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Store -->
                    <TextBlock Text="Store" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtStore" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Category -->
                    <TextBlock Text="Category" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmbCategory" 
                              Background="{StaticResource BackgroundHoverBrush}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Padding="15,12"
                              FontSize="14"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Electronics" IsSelected="True"/>
                        <ComboBoxItem Content="Clothing"/>
                        <ComboBoxItem Content="Home &amp; Garden"/>
                        <ComboBoxItem Content="Sports"/>
                        <ComboBoxItem Content="Books"/>
                        <ComboBoxItem Content="Beauty"/>
                        <ComboBoxItem Content="Food"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <!-- Original Price -->
                    <TextBlock Text="Original Price (‚Ç∫)" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtOriginalPrice" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Discounted Price -->
                    <TextBlock Text="Discounted Price (‚Ç∫)" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtDiscountedPrice" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- URL -->
                    <TextBlock Text="Product URL (optional)" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtUrl" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,25"/>

                    <!-- Add Button -->
                    <Button x:Name="btnAdd" 
                            Content="‚ûï Add Deal" 
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnAdd_Click"/>

                    <!-- Stats -->
                    <Border Background="{StaticResource BackgroundHoverBrush}"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="üìä Statistics" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                    <TextBlock x:Name="txtTotalDeals" 
                                               Text="0" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="Total Deals" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                    <TextBlock x:Name="txtTotalSaved" 
                                               Text="‚Ç∫0" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text="Total Saved" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0">
                                    <TextBlock x:Name="txtAvgDiscount" 
                                               Text="%0" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource SecondaryBrush}"/>
                                    <TextBlock Text="Avg. Discount" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1">
                                    <TextBlock x:Name="txtBestDeal" 
                                               Text="%0" 
                                               FontSize="28" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource WarningBrush}"/>
                                    <TextBlock Text="Best Deal" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Product List -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="üî• Active Deals" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Filter & Search -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtSearch" 
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,15,0"
                         TextChanged="TxtSearch_TextChanged">
                    <TextBox.Tag>üîç Search deals...</TextBox.Tag>
                </TextBox>

                <ComboBox x:Name="cmbFilterCategory" 
                          Grid.Column="1"
                          Background="{StaticResource BackgroundHoverBrush}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Padding="15,12"
                          FontSize="14"
                          Width="150"
                          Margin="0,0,15,0"
                          SelectionChanged="CmbFilterCategory_SelectionChanged">
                    <ComboBoxItem Content="All Categories" IsSelected="True"/>
                    <ComboBoxItem Content="Electronics"/>
                    <ComboBoxItem Content="Clothing"/>
                    <ComboBoxItem Content="Home &amp; Garden"/>
                    <ComboBoxItem Content="Sports"/>
                    <ComboBoxItem Content="Books"/>
                    <ComboBoxItem Content="Beauty"/>
                    <ComboBoxItem Content="Food"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <ComboBox x:Name="cmbSort" 
                          Grid.Column="2"
                          Background="{StaticResource BackgroundHoverBrush}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Padding="15,12"
                          FontSize="14"
                          Width="150"
                          SelectionChanged="CmbSort_SelectionChanged">
                    <ComboBoxItem Content="Newest First" IsSelected="True"/>
                    <ComboBoxItem Content="Highest Discount"/>
                    <ComboBoxItem Content="Lowest Price"/>
                    <ComboBoxItem Content="Most Saved"/>
                </ComboBox>
            </Grid>

            <!-- Product List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="productsPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundCardBrush}"
                                    CornerRadius="15"
                                    Padding="20"
                                    Margin="0,0,15,15"
                                    Width="280"
                                    Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Discount Badge & Delete -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Border Background="{StaticResource GradientBrush}"
                                                CornerRadius="20"
                                                Padding="12,6"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding DiscountBadge}" 
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="White"/>
                                        </Border>
                                        <Button Content="üóëÔ∏è" 
                                                HorizontalAlignment="Right"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="{StaticResource TextSecondaryBrush}"
                                                FontSize="16"
                                                Cursor="Hand"
                                                Tag="{Binding Id}"
                                                Click="BtnDelete_Click"/>
                                    </Grid>

                                    <!-- Product Name -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,5"/>

                                    <!-- Store & Category -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Store}" 
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text=" ‚Ä¢ " 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Category}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"/>
                                    </StackPanel>

                                    <!-- Prices -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding DiscountedPrice, StringFormat='‚Ç∫{0:N0}'}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="{Binding OriginalPrice, StringFormat='‚Ç∫{0:N0}'}" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextDecorations="Strikethrough"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <!-- Saved Amount -->
                                    <Border Grid.Row="4" 
                                            Background="{StaticResource BackgroundHoverBrush}"
                                            CornerRadius="8"
                                            Padding="10,6">
                                        <TextBlock Foreground="{StaticResource SuccessBrush}"
                                                   FontSize="12">
                                            <Run Text="üí∞ You save: "/>
                                            <Run Text="{Binding SavedAmount, StringFormat='‚Ç∫{0:N0}'}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="emptyState" 
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="üõí" 
                           FontSize="64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="No deals yet!" 
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Add your first deal to start saving money" 
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

